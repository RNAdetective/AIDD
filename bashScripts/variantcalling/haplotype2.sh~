#!/usr/bin/env bash
main_function() {
export PATH=$PATH:/home/user/AIDD/AIDD_tools/bin
INPUT=/media/sf_AIDD/PHENO_DATA.csv
OLDIFS=$IFS
IFS=,
[ ! -f $INPUT ] && { echo "$INPUT file not found"; exit 99; }
while read  x run condition sample t_name2
do
    java -jar /home/user/AIDD/AIDD_tools/GenomeAnalysisTK.jar -T HaplotypeCaller -R /media/sf_AIDD/references/ref2.fa --dbsnp /media/sf_AIDD/references/dbsnp.vcf -dontUseSoftClippedBases -stand_call_conf 20.0 --filter_reads_with_N_cigar -I /media/sf_AIDD/working_directory/"$run"recal_reads.bam -o /media/sf_AIDD/working_directory/"$run"raw_variants_recal.vcf

done < $INPUT
IFS=$OLDIFS
}
main_function 2>&1 | tee -a /media/sf_AIDD/quality_control/logs/haplotype2.log
